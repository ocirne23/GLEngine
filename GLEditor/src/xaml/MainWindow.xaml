<Window x:Class="GLEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GLEditor"
        mc:Ignorable="d"
        WindowStyle="None"
        Style="{StaticResource CustomWindowStyle}"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="900" Width="1600">
    <Grid>
        <ListBox x:Name="listBox" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="200" Margin="1" />
        <Button x:Name="WindowCloseButton" Content="x" HorizontalAlignment="Right" VerticalAlignment="Top" Width="20" Height="18" TextBlock.TextAlignment="Center" Click="WindowCloseButton_Click"/>
    </Grid>
</Window>
